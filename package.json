{
  "name": "mapcap-ipo-backend",
  "version": "1.7.5",
  "description": "Enterprise-Grade TypeScript Backend for MapCap IPO - Stabilized for MERN Integration",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --coverage --runInBand"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "@types/node-cron": "^3.0.11",
    "@types/jsonwebtoken": "^9.0.5",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-jest": "^29.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.0.0",
    "cross-env": "^7.0.3",
    "nock": "^13.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "setupFilesAfterEnv": [
      "./test/setup.ts"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "verbose": true,
    "testTimeout": 30000
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/map-of-pi/mapcap-ipo-backend.git"
  },
  "author": "Map-of-Pi Dev Team",
  "license": "ISC",
  "_comments": {
    "note1": "ESM STABILIZATION: Configured Jest with moduleNameMapper to resolve .js extensions back to .ts source during testing.",
    "note2": "RUNTIME COMPATIBILITY: Added --experimental-vm-modules to NODE_OPTIONS for native ESM support in Jest.",
    "note3": "ZERO-BREAKAGE: Maintained existing script names to ensure CI/CD and DevOps continuity."
  }
}
