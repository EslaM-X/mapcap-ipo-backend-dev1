{
  "name": "mapcap-ipo-backend",
  "version": "1.7.0",
  "description": "Enterprise-Grade Backend for MapCap IPO - Stabilized for Termux & MERN Integration",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --runInBand --detectOpenHandles",
    "test:watch": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS='--experimental-vm-modules' jest --coverage --runInBand",
    "build": "echo 'Optimization for Map-of-Pi Ecosystem Deployment'"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.0.0",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "mongodb-memory-server": "^9.0.0",
    "cross-env": "^7.0.3",
    "nock": "^13.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./test/setup.js"
    ],
    "transform": {},
    "verbose": true,
    "testTimeout": 30000
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-repo/mapcap-ipo-backend.git"
  },
  "author": "Map-of-Pi Dev Team",
  "license": "ISC",
  "_comments": {
    "note1": "Standardized for cross-platform compatibility including Windows, Linux, and Termux.",
    "note2": "Development dependencies include 'nock' for HTTP mocking to ensure isolated unit testing.",
    "note3": "Maintains strict compatibility with MapCap IPO Frontend integration."
  }
}
